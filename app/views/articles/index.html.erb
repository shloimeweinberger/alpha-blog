<%= link_to 'home', root_path%>
<br>
<h1>All articles</h1>
<p><%= link_to "Create new aticle", new_article_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
    <% @articles.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.description %></td>
        <td><%= link_to "Edit", edit_article_path(t) %></td>
        <td><%= link_to "Show", article_path(t) %></td>
        <td><%= link_to "Delete", article_path(t), method: :delete, data: {confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
 </table>